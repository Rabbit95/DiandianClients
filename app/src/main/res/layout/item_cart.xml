<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="2dp"
    android:layout_marginLeft="1dp"
    android:layout_marginRight="1dp"
    android:layout_width="match_parent"
    android:layout_height="80dp"    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

    <ImageView
        android:id="@+id/cart_item_iv"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:gravity="left"
        android:src="@mipmap/e" />

    <LinearLayout
        android:layout_marginLeft="3dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/cart_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="name"
            android:textColor="#200"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/cart_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cart_item_number"
            android:layout_marginTop="7dp"
            android:text="price"
            android:textColor="#ff5e0b"
            android:textSize="17sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_vertical"
        android:gravity="right"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/cart_item_less"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/less" />

        <TextView
            android:layout_marginRight="2dp"
            android:layout_marginLeft="3dp"
            android:id="@+id/cart_item_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="0"
            android:textSize="18sp"
            android:textColor="#000"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/cart_item_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/add" />
    </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>